# This is a starter .env file - Copy this to backend/.env and fill in your values
# DO NOT commit the actual .env file with real tokens to version control!

# ============================================
# HUGGING FACE CONFIGURATION (REQUIRED)
# ============================================
# Get your token from: https://huggingface.co/settings/tokens
HF_API_TOKEN=

# Model to use for text generation
HF_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1

# Model for embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ============================================
# DATABASE CONFIGURATION (Optional for dev)
# ============================================
# For development, SQLite can be used, or leave empty
# For production, use PostgreSQL
DATABASE_URL=postgresql://agrisense_user:password@localhost:5432/agrisense

# ============================================
# DATA.GOV.IN API (Optional)
# ============================================
# Get API key from: https://data.gov.in
DATA_GOV_API_KEY=

# ============================================
# APPLICATION SETTINGS
# ============================================
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# VECTOR STORE
# ============================================
# Directory for ChromaDB persistence
CHROMA_PERSIST_DIR=./chroma_db

# ============================================
# RAG SETTINGS
# ============================================
# Maximum context length for LLM
MAX_CONTEXT_LENGTH=4096

# Number of documents to retrieve
TOP_K_RESULTS=5

# Minimum similarity threshold (0-1)
SIMILARITY_THRESHOLD=0.7

# ============================================
# VISUALIZATION
# ============================================
DEFAULT_CHART_WIDTH=800
DEFAULT_CHART_HEIGHT=600

# ============================================
# MAPBOX (Optional - for advanced maps)
# ============================================
# Get token from: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=

# ============================================
# PREFECT (Optional - for task scheduling)
# ============================================
PREFECT_API_URL=http://localhost:4200/api
